<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Funktion</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Funktion wählen</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0">
										<numIndex index="0">Liste von Veranstaltungen</numIndex>
										<numIndex index="1">Event->list;Event->search;Event->data;Event->paginatedData</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Suchformular für Veranstaltungen</numIndex>
										<numIndex index="1">Event->searchForm</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">Detailansicht Veranstaltung</numIndex>
										<numIndex index="1">Event->show;Event->export</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="0">Weiterleitung zur Event-Ansicht</numIndex>
										<numIndex index="1">Event->redirect</numIndex>
									</numIndex>
								</items>
								<default>Event->list;Event->search;Event->data;Event->paginatedData</default>
							</config>
						</TCEforms>
					</switchableControllerActions>

					<settings.flexform.eventCollection>
						<TCEforms>
							<label>Diese Veranstaltungen darstellen</label>
							<config>
								<type>user</type>
								<renderType>napiItemSelector</renderType>
								<allowed>event</allowed>
								<minItems>0</minItems>
								<maxItems>99</maxItems>
								<size>10</size>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->selection</displayCond>
						</TCEforms>
					</settings.flexform.eventCollection>

					<settings.flexform.stream>
						<TCEforms>
							<label>Marker sukzessive nachladen</label>
							<config>
								<type>check</type>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.stream>

					<settings.flexform.eventTypes>
						<TCEforms>
							<label>Veranstaltungen diese Typs darstellen</label>
							<exclude>1</exclude>
							<config>
								<type>select</type>
								<renderType>selectMultipleSideBySide</renderType>
								<minitems>0</minitems>
								<maxitems>20</maxitems>
								<items>
									<numIndex index="1">
										<numIndex index="0">Gottesdienste</numIndex>
										<numIndex index="1">church_service</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Gremium</numIndex>
										<numIndex index="1">committee</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">Sonstiges</numIndex>
										<numIndex index="1">default</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="0">Bildung</numIndex>
										<numIndex index="1">edu</numIndex>
									</numIndex>
									<numIndex index="5">
										<numIndex index="0">Gemeindeleben</numIndex>
										<numIndex index="1">event</numIndex>
									</numIndex>
									<numIndex index="6">
										<numIndex index="0">Freizeit</numIndex>
										<numIndex index="1">leisure</numIndex>
									</numIndex>
									<numIndex index="7">
										<numIndex index="0">Konzert</numIndex>
										<numIndex index="1">music</numIndex>
									</numIndex>
									<numIndex index="8">
										<numIndex index="0">Spiritualität</numIndex>
										<numIndex index="1">spirituality</numIndex>
									</numIndex>
								</items>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.eventTypes>

					<settings.flexform.institutionCollection>
						<TCEforms>
							<label>Veranstaltungen dieser Institutionen darstellen</label>
							<config>
								<type>user</type>
								<renderType>napiItemSelector</renderType>
								<allowed>institution</allowed>
								<minItems>0</minItems>
								<maxItems>99</maxItems>
								<size>10</size>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.institutionCollection>

					<settings.flexform.categories>
						<TCEforms>
							<label>Veranstaltungen mit diesen Kategorien darstellen</label>
							<exclude>1</exclude>
							<config>
								<type>select</type>
								<renderMode>tree</renderMode>
								<renderType>selectTree</renderType>
								<treeConfig>
									<parentField>parent</parentField>
									<appearance>
										<collapseAll>TRUE</collapseAll>
										<showHeader>TRUE</showHeader>
									</appearance>
								</treeConfig>
								<foreign_table>sys_category</foreign_table>
								<size>10</size>
								<autoSizeMax>20</autoSizeMax>
								<minitems>0</minitems>
								<maxitems>20</maxitems>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.categories>

					<settings.flexform.categoryOperator>
						<TCEforms>
							<label>Kategorie-Operator</label>
							<exclude>1</exclude>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0">
										<numIndex index="0">ODER: eine der gewählen Kategorien muss gesetzt sein</numIndex>
										<numIndex index="1">OR</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">UND: alle Kategorien müssen gesetzt sein</numIndex>
										<numIndex index="1">AND</numIndex>
									</numIndex>
								</items>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.categoryOperator>

					<settings.flexform.dateFrom>
						<TCEforms>
							<label>Zeitraum von</label>
							<config>
								<type>input</type>
								<size>10</size>
								<eval>date</eval>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.dateFrom>

					<settings.flexform.dateTo>
						<TCEforms>
							<label>Zeitraum bis</label>
							<config>
								<type>input</type>
								<size>10</size>
								<eval>date</eval>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.dateTo>

                    <settings.flexform.numDays>
                        <TCEforms>
                            <label>Die folgenden x Tage</label>
                            <config>
                                <type>input</type>
                                <size>3</size>
                            </config>
                            <displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
                        </TCEforms>
                    </settings.flexform.numDays>

					<settings.flexform.geosearch>
						<TCEforms>
							<label>Auswahl über Geodaten einschränken</label>
							<onChange>reload</onChange>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.geosearch>

					<settings.flexform.latitude>
						<TCEforms>
							<label>Breitengrad</label>
							<config>
								<type>input</type>
								<size>5</size>
								<default></default>
							</config>
							<displayCond>
								<AND>
									<numIndex index="1">FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</numIndex>
									<numIndex index="2">FIELD:settings.flexform.geosearch:=:1</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.flexform.latitude>

					<settings.flexform.longitude>
						<TCEforms>
							<label>Längengrad</label>
							<config>
								<type>input</type>
								<size>5</size>
								<default></default>
							</config>
							<displayCond>
								<AND>
									<numIndex index="1">FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</numIndex>
									<numIndex index="2">FIELD:settings.flexform.geosearch:=:1</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.flexform.longitude>

					<settings.flexform.radius>
						<TCEforms>
							<label>Umkreis (km)</label>
							<config>
								<type>input</type>
								<size>5</size>
								<default></default>
							</config>
							<displayCond>
								<AND>
									<numIndex index="1">FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</numIndex>
									<numIndex index="2">FIELD:settings.flexform.geosearch:=:1</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.flexform.radius>
				</el>
			</ROOT>
		</sDEF>
		<sTemplate>
			<ROOT>
				<TCEforms>
					<sheetTitle>Ausgabe</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<settings.flexform.searchFormTemplate>
						<TCEforms>
							<label>Art des Suchformulars</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0">
										<numIndex index="0">Normale Version</numIndex>
										<numIndex index="1">Default</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Service Flap: Veranstaltungen</numIndex>
										<numIndex index="1">ServiceFlap</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Service Flap: Kirchenmusik</numIndex>
										<numIndex index="1">ServiceFlapConcerts</numIndex>
									</numIndex>
                                    <numIndex index="3">
                                        <numIndex index="0">Gottesdienste (z.B. zur Verwendung im Teaser für die Gottesdienstsuche)</numIndex>
                                        <numIndex index="1">ChurchServices</numIndex>
                                    </numIndex>
								</items>
								<default>Default</default>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->searchForm</displayCond>
						</TCEforms>
					</settings.flexform.searchFormTemplate>

					<settings.flexform.header>
						<TCEforms>
							<label>Überschrift für Suchformular (optional)</label>
							<config>
								<type>input</type>
								<size>30</size>
								<default></default>
							</config>
							<displayCond>
								<AND>
									<OR>
										<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</numIndex>
										<numIndex index="1">FIELD:sDEF.switchableControllerActions:=:Event->searchForm</numIndex>
									</OR>
									<numIndex index="1">FIELD:settings.flexform.searchFormTemplate:=:Default</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.flexform.header>

					<settings.flexform.header_layout>
						<TCEforms>
							<label>Layout</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0">
										<numIndex index="0">Überschrift 1</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Überschrift 2</numIndex>
										<numIndex index="1">2</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Überschrift 3</numIndex>
										<numIndex index="1">3</numIndex>
									</numIndex>
								</items>
								<default>2</default>
							</config>
							<displayCond>
								<AND>
									<OR>
										<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</numIndex>
										<numIndex index="1">FIELD:sDEF.switchableControllerActions:=:Event->searchForm</numIndex>
									</OR>
									<numIndex index="1">FIELD:settings.flexform.searchFormTemplate:=:Default</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.flexform.header_layout>


					<settings.flexform.maxItems>
						<TCEforms>
							<label>Maximale Anzahl</label>
							<config>
								<type>input</type>
								<size>5</size>
								<default></default>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.maxItems>

					<settings.flexform.paginate.mode>
						<TCEforms>
							<label>Art der Paginierung</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0">
										<numIndex index="0">Keine Paginierung</numIndex>
										<numIndex index="1">0</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Button zum Laden weiterer Elemente</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Blätternavigation einblenden</numIndex>
										<numIndex index="1">2</numIndex>
									</numIndex>
								</items>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.paginate.mode>

					<settings.flexform.paginate.itemsPerPage>
						<TCEforms>
							<label>Anzahl Elemente pro Seite</label>
							<config>
								<type>input</type>
								<size>5</size>
								<default>25</default>
							</config>
							<displayCond>
								<AND>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</numIndex>
									<numIndex index="1">FIELD:settings.flexform.paginate.mode:!=:0</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.flexform.paginate.itemsPerPage>

					<settings.flexform.paginate.insertAbove>
						<TCEforms>
							<label>Paginierung über der Liste anzeigen</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
							<displayCond>
								<AND>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</numIndex>
									<numIndex index="1">FIELD:settings.flexform.paginate.mode:=:2</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.flexform.paginate.insertAbove>

					<settings.flexform.paginate.insertBelow>
						<TCEforms>
							<label>Paginierung unter der Liste anzeigen</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
							<displayCond>
								<AND>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</numIndex>
									<numIndex index="1">FIELD:settings.flexform.paginate.mode:=:2</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.flexform.paginate.insertBelow>

					<settings.flexform.paginate.maximumNumberOfLinks>
						<TCEforms>
							<label>Anzahl Links in Paginierung</label>
							<config>
								<type>input</type>
								<size>5</size>
								<default>5</default>
							</config>
							<displayCond>
								<AND>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</numIndex>
									<numIndex index="1">FIELD:settings.flexform.paginate.mode:=:2</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.flexform.paginate.maximumNumberOfLinks>

					<settings.flexform.showMap>
						<TCEforms>
							<label>Zeige Karte mit Veranstaltungen</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.showMap>

					<settings.flexform.showFilter>
						<TCEforms>
							<label>Nutzer sollen die Liste filtern können</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.showFilter>

					<settings.flexform.errorMessage>
						<TCEforms>
							<label>Ausgabe, wenn keine Veranstaltung gefunden (optional)</label>
							<config>
								<type>text</type>
								<rows>3</rows>
								<cols>40</cols>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Event->list;Event->search;Event->data;Event->paginatedData</displayCond>
						</TCEforms>
					</settings.flexform.errorMessage>

				</el>
			</ROOT>
		</sTemplate>
		<sFilter>
			<ROOT>
				<TCEforms>
					<sheetTitle>Filter</sheetTitle>
				</TCEforms>
				<type>array</type>

				<el>
					<settings.filter.cityCollection>
						<TCEforms>
							<label>Orte (Namen durch Komma getrennt)</label>
							<config>
								<type>text</type>
								<rows>3</rows>
								<cols>40</cols>
							</config>
							<displayCond>
								<OR>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Event->searchForm</numIndex>
									<numIndex index="1">FIELD:sTemplate.settings.flexform.showFilter:=:1</numIndex>
								</OR>
							</displayCond>
						</TCEforms>
					</settings.filter.cityCollection>


					<settings.filter.institutionCollection>
						<TCEforms>
							<label>Institutionen zu Orten</label>
							<config>
								<type>user</type>
								<renderType>napiItemSelector</renderType>
								<allowed>institution</allowed>
								<minItems>0</minItems>
								<maxItems>99</maxItems>
								<size>10</size>
							</config>
							<displayCond>
								<OR>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Event->searchForm</numIndex>
									<numIndex index="1">FIELD:sTemplate.settings.flexform.showFilter:=:1</numIndex>
								</OR>
							</displayCond>
						</TCEforms>
					</settings.filter.institutionCollection>

					<settings.filter.pidDateFilter>
						<TCEforms>
							<label>Seite mit Datumsvorlagen</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
										<default>
											<searchWholePhrase>1</searchWholePhrase>
										</default>
									</suggest>
								</wizards>
							</config>
							<displayCond>
								<OR>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Event->searchForm</numIndex>
									<numIndex index="1">FIELD:sTemplate.settings.flexform.showFilter:=:1</numIndex>
								</OR>
							</displayCond>
						</TCEforms>
					</settings.filter.pidDateFilter>

					<settings.filter.categoryCollection>
						<TCEforms>
							<label>Kategorien</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>sys_category</allowed>
								<size>10</size>
								<maxitems>99</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
										<default>
											<searchWholePhrase>1</searchWholePhrase>
										</default>
									</suggest>
								</wizards>
							</config>
							<displayCond>
								<OR>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Event->searchForm</numIndex>
									<numIndex index="1">FIELD:sTemplate.settings.flexform.showFilter:=:1</numIndex>
								</OR>
							</displayCond>
						</TCEforms>
					</settings.filter.categoryCollection>

				</el>
			</ROOT>
		</sFilter>
		<sPages>
			<ROOT>
				<TCEforms>
					<sheetTitle>Seiten</sheetTitle>
				</TCEforms>
				<type>array</type>

				<el>
					<settings.flexform.pidSingle>
						<TCEforms>
							<label>Seite für Einzelansicht</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
										<default>
											<searchWholePhrase>1</searchWholePhrase>
										</default>
									</suggest>
								</wizards>
							</config>
							<displayCond>
								<AND>
